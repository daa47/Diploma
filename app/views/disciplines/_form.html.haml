=form_for @discipline,:html=>{:multipart=>true} do |f|
  -if @discipline.errors.any?
    .div.error
      %h2 При сохранении произошли ошибки
      %ul
        -@discipline.errors.full_messages.each do |msg|
          %li=msg

  .field
    = f.label :full_name
    %br
    = f.text_field :full_name
  .field
    = f.label :short_name
    %br
    = f.text_field :short_name
  .actions
    = f.submit 'Сохранить'
