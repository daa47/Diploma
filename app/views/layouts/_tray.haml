:javascript
  $(function(){
    $("#date_current_chousen_year").change(function(){
      $(this).change_year();
    });
  });

#tray.box
  %p.box.f-left
    -if @current_user
      Роль:
      %strong=@current_user.human_role  
  %p.f-right
    ="Год"
    &nbsp
    =select_year(session[:choice_year], :start_year=>Time.now.year, :end_year=>1985, :field_name=>'current_chousen_year')
    &nbsp      
    -if @current_user
      Вы:
      %strong=@current_user.login
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      %strong=link_to "Выход",logout_path,:id=>"logout"
    -else
      %strong=link_to "Регистрация",signup_path
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      %strong=link_to "Вход",login_path,:id=>"login"
