= form_for @school do |f|
  -if @school.errors.any?
    .div.error
      %h2 При сохранении произошли ошибки
      %ul
        -@school.errors.full_messages.each do |msg|
          %li=msg
  .field
    = f.label :number
    %br
    = f.text_field :number
  .field
    = f.label :stype
    %br
    = f.radio_button :stype, "1", :checked=>@school.stype?
    ФДО &nbsp;&nbsp;
    = f.radio_button :stype, "0", :checked=>!@school.stype?
    ПШ
  ФИО директора:
  .field 
    =f.label :second_name
    &nbsp
    =f.text_field :second_name
  .field
    =f.label :first_name
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    =f.text_field :first_name
  .field
    =f.label :last_name
    &nbsp
    =f.text_field :last_name
  Официальное ФИО директора
  .field
    =f.label :official_second_name
    &nbsp
    =f.text_field :official_second_name
  .field
    =f.label :official_first_name
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    =f.text_field :official_first_name
  .field
    =f.label :official_last_name
    &nbsp
    =f.text_field :official_last_name
  .field
    =f.label :telephone
    %br
    =f.text_field :telephone
  .field
    =f.label :fax
    %br
    =f.text_field :fax    
  .field
    =f.label :email
    %br
    =f.text_field :email
  .field
    =f.label :address
    %br
    =f.text_field :address        
  .fields
    %h4 Классы
    =f.fields_for :school_groups do |builder|
      =render 'school_group_fields', :f => builder
    .field      
      = link_to_add_fields "Добавить класс", f, :school_groups 
  .actions
    = f.submit 'Сохранить'
